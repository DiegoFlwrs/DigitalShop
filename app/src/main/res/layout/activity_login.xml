<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ui.principal.inicio"
android:background="@color/crema_100"
    android:gravity="center_vertical|center_horizontal"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="180dp"
        />
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    android:background="@drawable/custom_text"
    app:cardBackgroundColor="#A18171"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:id="@+id/txtLogin"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/emailEditText"
            android:background="@drawable/marco_gris"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Correo"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="40dp"
            android:textColorHint="#545556"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/passwordEditText"
            android:background="@drawable/marco_gris"
            android:drawableLeft="@drawable/baseline_account_balance_wallet_24"
            android:drawablePadding="8dp"
            android:hint="Constraseña"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="40dp"
            android:textColorHint="#545556"
            android:maxLines="1"
            />
        <FrameLayout
            android:id="@+id/loginFrame"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ingresar"
                android:background="@drawable/bg_blue_with_border"
                android:textColor="@color/white"
                android:enabled="true"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone"
                style="?android:attr/progressBarStyle"
                />
        </FrameLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:text="eh olvidado la constraseña"
    android:textSize="15sp"
    android:textAlignment="center"
    android:id="@+id/txtResetPassword"
    android:textColor="@color/marron"/>

</LinearLayout>