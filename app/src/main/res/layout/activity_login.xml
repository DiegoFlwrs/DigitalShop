<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".ui.principal.inicio"
android:background="@drawable/loginbkg"
    android:gravity="center_vertical|center_horizontal"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        />
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="20dp"
    android:background="@drawable/custom_text"
    app:cardBackgroundColor="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/txtLogin"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/purple_800"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/emailEditText"
            android:background="@drawable/custom_text"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:hint="Correo"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="40dp"
            android:textColorHint="#545556"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/passwordEditText"
            android:background="@drawable/custom_text"
            android:drawableLeft="@drawable/baseline_account_balance_wallet_24"
            android:drawablePadding="8dp"
            android:hint="Constraseña"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/cardview_dark_background"
            android:layout_marginTop="40dp"
            android:textColorHint="#545556"
            android:maxLines="1"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/loginButton"
            android:text="Iniciar Sesión"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_blue_with_border"
            android:textColor="@color/white"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:text="eh olvidado la constraseña"
    android:textSize="14sp"
    android:textAlignment="center"
    android:id="@+id/txtResetPassword"
    android:textColor="@color/purple_800"/>

</LinearLayout>